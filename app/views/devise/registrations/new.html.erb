
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="flex flex-col h-screen items-center">
<div class="flex items-center justify-between p-6 bg-sky-600 w-full text-white">
<div class="flex-1">
 <a href="<%= splash_index_path %>">
  <box-icon name='arrow-back' color="white"></box-icon>
</a>
</div>
<div class="flex-1 flex justify-center"><h4>REGISTER</h4></div>
 <div class="flex-1 flex justify-end">
    <%= f.submit "Next", class:'text-sm text-white hover:text-gray-100 transition duration-300 ease-in-out' %>
</div>
<%# <button type="button" class="inline-block px-6 py-2.5 bg-transparent text-white text-sm leading-tight  rounded hover:text-blue-700 hover:bg-gray-100 focus:bg-gray-100 focus:outline-none focus:ring-0 active:bg-gray-200 transition duration-150 ease-in-out">Log In</button> %>
</div>
<div class="bg-white mt-6 w-full border-y-2 border-gray-100 divide-y-2 divide-gray-100 pl-4">
 <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder:'Full name', class:'form-control block w-full py-4 placeholder:text-gray-300 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none ' %>
  </div>
 <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:'form-control block w-full py-4 placeholder:text-gray-300 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none ' %>
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:'Password', class:'form-control  block w-full py-4 placeholder:text-gray-300  focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none' %>
  </div>
   <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "current-password", placeholder:'Confirm password', class:'form-control  block w-full py-4 placeholder:text-gray-300  focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none' %>
  </div>
</div>
</div>
<% end %>

 




